<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qst.ssm.mapper.ShopMapper">


    <select id="queryShop" resultType="map" >
        <![CDATA[
        SELECT
            jsc.sc_id,
            p.pd_id,
            p.pd_name,
            p.pd_price,
            jsc.sc_number,
            jsc.sc_price
        FROM
            product as p join j_shopping_cart as jsc  on jsc.pd_id=p.pd_id
        ]]>
    </select>

    <!--根据购物车ID修改购物车数量和购物车价格-->
    <update id="updateShop" parameterType="shop">
    <![CDATA[
        update  j_shopping_cart
        set     sc_id=#{scId},
                sc_number=#{scNumber},
                sc_price=#{scPrice}
        where   sc_id=#{scId}
     ]]>
    </update>

    <!--根据购物车ID删除商品-->
    <delete id="deleteShop" parameterType="int">
        <![CDATA[
        delete from j_shopping_cart where sc_id=#{scId}
      ]]>
    </delete>


